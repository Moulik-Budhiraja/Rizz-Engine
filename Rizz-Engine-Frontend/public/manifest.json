{
  "manifest_version": 3,
  "name": "Rizz Engine",
  "version": "1.0",
  "description": "HackThe6ix 2025",
  "action": {
    "default_title": "Toggle Rizz Engine Panel"
  },
  "side_panel": {
    "default_path": "panel.html"
  },
  "content_scripts": [
    {
      "matches": ["*://www.instagram.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["sidePanel", "tabs"],
  "host_permissions": ["https://instagram.com/*", "https://www.instagram.com/*"]
}